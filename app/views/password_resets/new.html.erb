<% provide(:title, "パスワードリセット") %>
<div class = "container">
  <h1 class = "top_text">－パスワード変更－</h1>
  <div class = "input-form">
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>

      <h4 class = "password-reset-text">パスワードをリセットする手順を送信しますので</h4>
      <h4 class = "password-reset-text">ご登録のメールアドレスを入力してください。</h4>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <div class = "input-submit">
        <%= f.submit "送信" %>
      </div>

    <% end %>
  </div>
</div>