<header>
  <div class="container">
    <div class = "header-links">
      <div class = "links-left">
        <% if session[:user_id] == nil %>
          <%= link_to root_path do %>
            <%= link_to image_tag('/logo.png', alt: "Ramen logo", width: "220px", height:"50px", class: "logo"),
                          root_path %>
          <% end %>
        <% else %>
          <%= link_to root_path do %>
            <%= link_to image_tag('/logo.png', alt: "Ramen logo", width: "220px", height:"50px", class: "logo"),
                        user_path(@user) %>
          <% end %>
        <% end %>
      </div>
      <div class = "links-right">
        <ul>
          <% if session[:user_id] != nil %>
            <li class = "link"><%= link_to "マイページ", user_path(@user) %></li>
            <li class = "link"><%= link_to "ログアウト", logout_path %></li>
          <% else %>
            <li class = "link"><%= link_to "ログイン", login_path %></li>
          <% end %>
          <li class = "link"><%= link_to "検索", "#" %></li>
        </ul>
      </div>
    </div>
  </div>
</header>