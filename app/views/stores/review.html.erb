<% provide(:top_text, "#{ @store.name}へのレビュー") %>
<div class = "container">
  <div class = "store-form">
      <div class = "input-form">
      <%
=begin%>
 <%= form_with(model: @micropost, local: true) do |f| %>

        <%= f.label :email, "食べたメニュー" %>
        <%= f.text_field :email, class: 'form-control' %>
        <p>&nbsp;</p>
        
        <%= f.label :email, "来店日" %>
        <%= f.date_field :email, class: 'form-control' %>
        <p>&nbsp;</p>

        <%= f.label :email, "来店時間" %>
        <%= f.select :email, class: 'form-control' %>
        <p>&nbsp;</p>

        <%= f.label :score, "点数" %>
        <%= f.collection_select :score, SelectScore.all, :id, :select_score, {prompt: "選ぶ"} %>
        <p>&nbsp;</p>

        <%= f.label :email, "待ち時間" %>
        <%= f.time_select :email, class: 'form-control' %>
        <p>&nbsp;</p>

        <%= f.label :email, "写真" %>
        <%= f.file_field :email %>
        <p>&nbsp;</p>

        <%= f.label :email, "コメント" %>
        <%= f.text_area :email, rows: 10 , class: 'form-control' %>
        <p>&nbsp;</p>

      <div class = "input-submit">
        <%= f.submit "投稿する" %>
      </div>

    <% end %> 
<%
=end%>
  </div>
  </div>  
</div>